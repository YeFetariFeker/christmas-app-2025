<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">

        <!-- SEARCH FORM -->
        <form action="/streaming_platform/search" method="GET" class="d-flex justify-content-center mt-3 mb-4">
            <input
                type="text"
                name="q"
                class="form-control w-50"
                placeholder="Search streaming_platform..."
                required
            >
            <button class="btn btn-primary ms-2" type="submit">Search</button>
        </form>

        <!-- Streaming_platform Cards -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% platforms.forEach(streaming_platform => { %>
                <div class="col">
                    <div class="card p-3 shadow-sm">
                        <h4><%= streaming_platform.streaming_platform %></h4>
                        <p>ID: <%= streaming_platform.streaming_platform_id %></p>
                    </div>
                </div>
            <% }) %>
        </div>
        
    </div>
</main>

<%- include('../partials/footer') %>