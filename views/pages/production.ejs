<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">

        <!-- SEARCH FORM -->
        <form action="/production/search" method="GET" class="d-flex justify-content-center mt-3 mb-4">
            <input
                type="text"
                name="q"
                class="form-control w-50"
                placeholder="Search production..."
                required
            >
            <button class="btn btn-primary ms-2" type="submit">Search</button>
        </form>

        <!-- Production Cards -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% productions.forEach(production => { %>
                <div class="col">
                    <div class="card p-3 shadow-sm">
                        <h4><%= production.production %></h4>
                        <p>ID: <%= production.production_id %></p>
                        <!-- <a href="/production/<%= production.production_id %>" class="btn btn-primary w-100">View</a> -->
                    </div>
                </div>
            <% }) %>
        </div>
        
    </div>
</main>

<%- include('../partials/footer') %>